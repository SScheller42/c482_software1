<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label layoutX="90.0" layoutY="100.0" text="Add Part">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <RadioButton fx:id="inHouseRadio" layoutX="527.0" layoutY="102.0" mnemonicParsing="false" onMouseClicked="#onInHouseRadioSelected" text="In-House" />
      <RadioButton fx:id="outsourcedRadio" layoutX="641.0" layoutY="100.0" mnemonicParsing="false" onMouseClicked="#onOutsourcedRadioSelected" text="Outsourced" />
      <Label layoutX="105.0" layoutY="175.0" text="ID" />
      <TextField fx:id="idTextField" disable="true" editable="false" layoutX="200.0" layoutY="175.0" text="Auto Assign- Disabled" />
      <Label layoutX="105.0" layoutY="225.0" text="Name" />
      <TextField fx:id="nameTextField" layoutX="200.0" layoutY="225.0" />
      <Label layoutX="105.0" layoutY="275.0" text="Inv" />
      <TextField fx:id="stockTextField" layoutX="200.0" layoutY="275.0" />
      <Label layoutX="105.0" layoutY="325.0" text="Price/Cost" />
      <TextField fx:id="costPerUnitTextField" layoutX="200.0" layoutY="325.0" />
      <Label layoutX="105.0" layoutY="375.0" text="Max" />
      <TextField fx:id="maxStockTextField" layoutX="200.0" layoutY="375.0" />
      <Label layoutX="380.0" layoutY="375.0" text="Min" />
      <TextField fx:id="minStockTextField" layoutX="420.0" layoutY="375.0" />
      <Label fx:id="machineOrCompanyLabel" layoutX="105.0" layoutY="425.0" text="&lt;Placeholder&gt;" />
      <TextField fx:id="machineOrCompanyTextField" layoutX="200.0" layoutY="425.0" />
      <ButtonBar layoutX="527.0" layoutY="497.0" prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button mnemonicParsing="false" onMouseClicked="#onSaveButtonClicked" text="Save" />
            <Button mnemonicParsing="false" onMouseClicked="#onCancelButtonClicked" text="Cancel" />
        </buttons>
      </ButtonBar>
      <Label fx:id="warningLabel" layoutX="99.0" layoutY="624.0">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
